{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "ES2020",
        "rootDirs": ["src", "tests"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "lib": ["es2020"],
        "strictNullChecks": true,
        "baseUrl": "src",
        "paths": {
            "@/tests/*": ["../tests/*"],
            "@/*": ["*"]
        }
    },
    "include": ["src", "tests"],
    "exclude": []
}